<!--            android:id="@+id/view"-->
<!--            />-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:textColorHint="#000"
            android:id="@+id/textInput1"
            android:backgroundTint="#000"
            android:layout_below="@+id/image"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Friend's Name"
                android:inputType="text"
                android:id="@+id/name"
                android:textColorHint="#000"
                android:backgroundTint="#000"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:textColorHint="#000"
            android:id="@+id/textInput2"
            android:backgroundTint="#000"
            android:layout_below="@+id/textInput1"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Friend's Email Address "
                android:inputType="textEmailAddress"
                android:id="@+id/email"
                android:textColorHint="#000"
                android:backgroundTint="#000"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:textColorHint="#000"
            android:id="@+id/textInput3"
            android:backgroundTint="#000"
            android:layout_below="@+id/textInput2"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Friend's Phone Number "
                android:inputType="number"
                android:id="@+id/phone"
                android:textColorHint="#000"
                android:backgroundTint="#000"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:textColorHint="#000"
            android:id="@+id/textInput4"
            android:backgroundTint="#000"
            android:layout_below="@+id/textInput3"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Friend's Residence"
                android:inputType="text"
                android:id="@+id/location_prop"
                android:textColorHint="#000"
                android:backgroundTint="#000"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:textColorHint="#000"
            android:id="@+id/textInput5"
            android:backgroundTint="#000000"
            android:layout_below="@+id/textInput4"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="How long have you been friends?"
                android:inputType="text"
                android:id="@+id/friendPeriod"
                android:textColorHint="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:textColorHint="#000"
            android:id="@+id/textInput6"
            android:backgroundTint="#000"
            android:layout_below="@+id/textInput5"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="Enter Brief Description of Your Friend"
                android:inputType="text"
                android:id="@+id/desc_prop"
                android:textColorHint="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="26dp"
            android:textColorHint="#000"
            android:id="@+id/textInput7"
            android:backgroundTint="#000"
            android:layout_below="@+id/textInput6"
            android:layout_marginTop="10dp">
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInput7"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#2196F3"
            android:text="Add Friend's Photo"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/chooseImage"

            />


        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chooseImage"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="#E91E63"
            android:text="Save Friend"
            android:textColor="#fff"
            android:textStyle="bold"
            android:id="@+id/btnSubmit"
            android:layout_marginBottom="20dp"
            />

    </RelativeLayout>

</ScrollView>
